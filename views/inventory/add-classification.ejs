<main>
  <section class="form-addClassification">
    <h1>
      <%= title %>
    </h1>

    <% if (errors) { %>
      <ul class="notice">
        <% errors.array().forEach(err=> { %><li>
            <%= err.msg %>
          </li>
          <% }) %>
      </ul>
      <% } %>


        <form action="/inv/add-classification" method="post" novalidate>
          <p>The classification name cannot contain spaces or special characters.</p>
          <label for="classification_name">Classification Name</label>
          <input id="classification_name" name="classification_name" type="text" required pattern="^[A-Za-z0-9]+$"
            autocomplete="off">
          <button   class="btn-addClassification btn primary"  type="submit">Save</button>
        </form>
  </section>
</main>
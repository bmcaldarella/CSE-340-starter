<%
// Prefer `account` enviado por el controller; si no, usa res.locals
const acct = account || res.locals.accountData || {};
const isStaff = acct.account_type === "Employee" || acct.account_type === "Admin";
%>

<main class="container">
  <h1>Account Management</h1>

  <h2>Welcome <%= acct.account_firstname || "User" %></h2>

  <p>
    <a href="/account/update/<%= acct.account_id %>">Update account information</a>
  </p>

  <% if (isStaff) { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Go to Inventory Management</a></p>
  <% } %>
</main>

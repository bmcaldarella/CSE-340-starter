<!-- /views/account/login.ejs -->
<main class="account auth">
  <h1 class="title-login"><%= title %></h1>

  <section class="flash">
    <% if (notice && notice.length) { %>
      <ul class="notice" role="alert" aria-live="polite">
        <% notice.forEach(m => { %><li><%= m %></li><% }) %>
      </ul>
    <% } %>
  </section>
    <!-- Login form -->
  <section class="login-section">
    <form id="loginForm" class="form auth-form" action="/account/login" method="post" novalidate>
      <div class="form-field">
        <label for="account_email">Email</label>
        <input  class="input-lg" type="email" id="account_email" name="account_email" placeholder="you@example.com"
          autocomplete="username" required />
      </div>

      <div class="form-field">
        <label for="account_password">Password</label>
        <input type="password" id="account_password" name="account_password" placeholder="********"
          autocomplete="current-password" minlength="8"
          pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required />
        <span class="pswds">Passwords must be at least <strong>12 characters</strong> and contain at least<strong> 1
            number</strong> ,<strong> 1 capital letter</strong> and <strong>1 special</strong>

      </div>







      <button type="submit" class="btn primary">Sign In</button>
    </form>


    <p class="helper">
      <hr>
      Donâ€™t have an account?
      <a href="/account/register" class="link">Create one</a>
    </p>
  </section>
</main>